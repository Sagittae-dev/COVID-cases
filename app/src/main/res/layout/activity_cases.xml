<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/worldbackground"
    tools:context=".CasesActivity">

    <TextView
        android:id="@+id/countryNameTextView"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Cały świat"
        android:textColor="#9A9A9A"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalCasesTextView"
        android:layout_width="354dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/deatchCasesTextView"
        android:layout_width="354dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalCasesTextView" />

    <TextView
        android:id="@+id/recoveryCasesTextView"
        android:layout_width="354dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deatchCasesTextView" />

    <TextView
        android:id="@+id/currentlyCasesTextView"
        android:layout_width="354dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recoveryCasesTextView" />

    <TextView
        android:id="@+id/criticalCasesTextView"
        android:layout_width="354dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentlyCasesTextView" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Wpisz nazwę kraju (ENG)"
        android:inputType="textPersonName"
        android:textColor="#8E8E8E"
        android:textColorHint="#939292"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countryNameTextView" />

    <Button
        android:id="@+id/button"
        android:layout_width="83dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#535353"
        android:onClick="getInfoForCountry"
        android:text="Znajdź"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/countryNameTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>